{
  "schemaVersion": 1,
  "id"           : "wthit",
  "provides"     : ["waila"],
  "version"      : "${version}",
  "custom"       : {
    "hermes"       : true,
    "waila:plugins": [
      {
        "id"         : "waila:core",
        "initializer": "mcp.mobius.waila.plugin.core.WailaCore"
      },
      {
        "id"         : "waila:vanilla",
        "initializer": "mcp.mobius.waila.plugin.vanilla.WailaVanilla"
      }
    ]
  },

  "entrypoints"  : {
    "main"   : ["mcp.mobius.waila.fabric.FabricWaila"],
    "client" : ["mcp.mobius.waila.fabric.FabricWailaClient"],
    "modmenu": ["mcp.mobius.waila.integration.modmenu.WailaModMenu"],
    "rei"    : ["mcp.mobius.waila.integration.reiwhycheckingforpackagename.ReiRecipeLookup"]
  },
  "accessWidener": "wthit.accesswidener",

  "name"         : "wthit",
  "description"  : "What the hell is that?",
  "icon"         : "wthit.jpg",
  "contact"      : {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/wthit",
    "issues"  : "https://github.com/badasintended/wthit/issues",
    "sources" : "https://github.com/badasintended/wthit"
  },
  "license"      : "CC BY NC SA 4.0",
  "authors"      : [
    "deirn",
    {
      "name"   : "Nicholas \"TehNut\" Ignoffo",
      "contact": {
        "email"   : "nick@tehnut.info",
        "homepage": "https://tehnut.info"
      }
    },
    {
      "name"   : "ProfMobius",
      "contact": {
        "homepage": "https://twitter.com/profmobius"
      }
    }
  ],

  "depends"      : {
    "fabricloader": ">=0.13.2",
    "fabric"      : ">=0.47.7",
    "minecraft"   : ">=1.18.2-0"
  },
  "suggests"     : {
    "modmenu": "*"
  }
}
